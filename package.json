{
  "name": "agent-run-manager-web",
  "version": "1.0.0",
  "description": "A web application for managing agent runs, converted from Raycast extension",
  "private": true,
  "dependencies": {
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "lucide-react": "^0.263.1",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "PORT=8000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"npm run backend:dev\" \"npm run server:dev\" \"npm run start\"",
    "dev:full": "./run.sh",
    "dev:quick": "./dev.sh",
    "server:install": "cd server && npm install",
    "server:start": "cd server && npm start",
    "server:dev": "cd server && npm run dev",
    "server:test": "cd server && npm test",
    "backend:install": "cd backend && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "backend:start": "cd backend && source venv/bin/activate && uvicorn main:app --host 0.0.0.0 --port 8080",
    "backend:dev": "cd backend && source venv/bin/activate && uvicorn main:app --host 0.0.0.0 --port 8080 --reload",
    "backend:test": "cd backend && source venv/bin/activate && pytest",
    "test:web-eval": "jest --testPathPattern=tests/web-eval-agent",
    "test:web-eval:watch": "jest --testPathPattern=tests/web-eval-agent --watch",
    "test:web-eval:coverage": "jest --testPathPattern=tests/web-eval-agent --coverage",
    "test:all": "npm test && npm run server:test && npm run backend:test && npm run test:web-eval",
    "postinstall": "npm run server:install",
    "setup": "npm install && npm run server:install && npm run backend:install",
    "cloudflare:build": "cd cloudflare && ./build.sh",
    "cloudflare:deploy": "cd cloudflare && wrangler deploy",
    "cloudflare:dev": "cd cloudflare && wrangler dev"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001",
  "devServer": {
    "headers": {
      "Access-Control-Allow-Origin": "*",
      "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
      "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Authorization, Accept, Origin",
      "Access-Control-Allow-Credentials": "true"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "dotenv": "^16.5.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  }
}
