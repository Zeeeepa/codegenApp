# =============================================================================
# CodegenApp Environment Configuration - EXAMPLE
# =============================================================================

# Database Configuration (SQLite for development)
# DATABASE_URL=postgresql://user:password@localhost:5432/codegenapp
# Leave DATABASE_URL empty to use SQLite

# =============================================================================
# OFFICIAL CODEGEN API CONFIGURATION (REQUIRED)
# =============================================================================
CODEGEN_API_KEY=your_codegen_api_key_here
CODEGEN_ORG_ID=your_org_id_here
CODEGEN_API_BASE_URL=https://api.codegen.com

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_BASE_URL=https://your-domain.com

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=3002
HOST=0.0.0.0
DEBUG=true
# DATABASE_URL=postgresql://user:password@localhost:5432/codegenapp
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOS=your_repo_1,your_repo_2

# =============================================================================
# AI/ML SERVICES
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
WEB_EVAL_AGENT_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
