# Codegen API Configuration
# Copy this file to .env and fill in your actual values

# REQUIRED: Get your API token from https://app.codegen.com/settings
REACT_APP_API_TOKEN=your_api_token_here

# OPTIONAL: Your default organization ID 
REACT_APP_DEFAULT_ORGANIZATION=your_org_id_here

# API Base URL - uses proxy server to avoid CORS issues
# Development: http://localhost:8001/api (uses local proxy server)
# Production: https://api.codegen.com (direct API access)
REACT_APP_API_BASE_URL=http://localhost:8001/api

# OPTIONAL: User ID for personalized features
REACT_APP_USER_ID=your_user_id_here

# DEVELOPMENT MODE: Set to 'true' to enable demo mode without real API token
REACT_APP_DEMO_MODE=false

# Backend Configuration (for server/.env)
# PORT=8001
# CODEGEN_API_BASE=https://api.codegen.com
# FRONTEND_URL=http://localhost:8000

# Cloudflare Workers Configuration
# REQUIRED: Get your API key from https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here

# REQUIRED: Your Cloudflare Account ID (found in dashboard sidebar)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# REQUIRED: Name of your webhook worker (will be created during deployment)
CLOUDFLARE_WORKER_NAME=webhook-gateway

# REQUIRED: Your deployed worker URL (auto-generated after deployment)
CLOUDFLARE_WORKER_URL=https://webhook-gateway.your-subdomain.workers.dev

# Grainchain Integration Configuration
# REQUIRED: Grainchain API endpoint for validation triggers
GRAINCHAIN_API_URL=http://localhost:8080
GRAINCHAIN_TIMEOUT=60000
GRAINCHAIN_MAX_MEMORY=512MB

# Webhook Security Configuration
# REQUIRED: GitHub webhook secret for payload verification
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# OPTIONAL: Enable webhook validation logging
WEBHOOK_DEBUG_MODE=false
