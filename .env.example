# =============================================================================
# CodegenApp Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# OFFICIAL CODEGEN API CONFIGURATION (REQUIRED)
# =============================================================================
# Get your API key from https://app.codegen.com/settings
CODEGEN_API_KEY=your_api_key_here

# Your organization ID from Codegen dashboard
CODEGEN_ORG_ID=your_organization_id_here

# Official Codegen API base URL (default: https://api.codegen.com)
CODEGEN_API_BASE_URL=https://api.codegen.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend API configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Frontend Codegen integration (for direct API calls from frontend)
REACT_APP_CODEGEN_API_KEY=your_api_key_here
REACT_APP_CODEGEN_ORG_ID=your_organization_id_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Backend server configuration
PORT=8000
HOST=0.0.0.0
DEBUG=true

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/codegenapp
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# GitHub App configuration for repository access
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=path/to/private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# GitHub personal access token (alternative to GitHub App)
GITHUB_TOKEN=your_github_token

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook endpoint for receiving Codegen agent events
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_SECRET=your_webhook_secret_key

# =============================================================================
# CI/CD PIPELINE CONFIGURATION
# =============================================================================
# Docker/Kubernetes configuration for validation environments
DOCKER_REGISTRY=your-registry.com
K8S_NAMESPACE=codegenapp-validation
K8S_CONFIG_PATH=~/.kube/config

# Validation pipeline settings
VALIDATION_TIMEOUT_MINUTES=30
MAX_VALIDATION_RETRIES=3
AUTO_MERGE_ENABLED=true

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring endpoints
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode settings
DEVELOPMENT_MODE=true
DEMO_MODE=false
ENABLE_DEBUG_LOGGING=true

# Feature flags for gradual migration
FEATURE_FLAG_USE_OFFICIAL_API=true
FEATURE_FLAG_ENABLE_WEBHOOKS=true
FEATURE_FLAG_ENHANCED_VALIDATION=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT configuration for internal authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# LEGACY CONFIGURATION (DEPRECATED - Will be removed in future versions)
# =============================================================================
# These are kept for backward compatibility during migration
# REACT_APP_API_TOKEN=your_api_token_here  # Use CODEGEN_API_KEY instead
# REACT_APP_DEFAULT_ORGANIZATION=your_org_id_here  # Use CODEGEN_ORG_ID instead
# CODEGEN_USER_ID=your_user_id_here  # No longer needed with official API
