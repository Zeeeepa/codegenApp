# =============================================================================
# CodegenApp Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# OFFICIAL CODEGEN API CONFIGURATION (REQUIRED)
# =============================================================================
# Get your API key from https://app.codegen.com/settings
CODEGEN_API_KEY=your_api_key_here

# Your organization ID from Codegen dashboard
CODEGEN_ORG_ID=your_organization_id_here

# Official Codegen API base URL (default: https://api.codegen.com)
CODEGEN_API_BASE_URL=https://api.codegen.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend API configuration
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Frontend Codegen integration (for direct API calls from frontend)
REACT_APP_CODEGEN_API_KEY=your_api_key_here
REACT_APP_CODEGEN_ORG_ID=your_organization_id_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Backend server configuration
PORT=8000
HOST=0.0.0.0
DEBUG=true

# Simple file-based storage (no database required for development)
DATA_STORAGE_PATH=./data
CACHE_STORAGE_PATH=./cache

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# GitHub App configuration for repository access
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY_PATH=path/to/private-key.pem
