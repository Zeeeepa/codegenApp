{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@codegenapp/shared-types": ["packages/shared-types/src/index.ts"],
      "@codegenapp/core-utils": ["packages/core-utils/src/index.ts"],
      "@codegenapp/api-client": ["packages/api-client/src/index.ts"],
      "@/*": ["src/*"]
    },
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build", ".next"]
}

