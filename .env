# =============================================================================
# CodegenApp Environment Configuration - PRODUCTION WITH REAL CREDENTIALS
# =============================================================================

# =============================================================================
# OFFICIAL CODEGEN API CONFIGURATION (REQUIRED) - CONFIGURE VIA SETTINGS UI
# =============================================================================
CODEGEN_API_KEY=your_codegen_api_key_here
CODEGEN_ORG_ID=your_org_id_here
CODEGEN_API_BASE_URL=https://api.codegen.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_CODEGEN_API_KEY=your_codegen_api_key_here
REACT_APP_CODEGEN_ORG_ID=your_org_id_here

# Legacy support (will be removed)
REACT_APP_API_TOKEN=your_codegen_api_key_here
REACT_APP_DEFAULT_ORGANIZATION=your_org_id_here
REACT_APP_DEMO_MODE=false
REACT_APP_USER_ID=your_user_id_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=3001
HOST=0.0.0.0
DEBUG=true
DATABASE_URL=postgresql://user:password@localhost:5432/codegenapp
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# GITHUB INTEGRATION - CONFIGURE VIA SETTINGS UI (grainchain, codegenApp)
# =============================================================================
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOS=grainchain,codegenApp

# =============================================================================
# AI/ML SERVICES - CONFIGURE VIA SETTINGS UI (web-eval-agent)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
WEB_EVAL_AGENT_ENABLED=true

# =============================================================================
# CLOUDFLARE CONFIGURATION - CONFIGURE VIA SETTINGS UI (online accessibility)
# =============================================================================
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
CLOUDFLARE_WORKER_NAME=webhook-gateway
CLOUDFLARE_WORKER_URL=https://webhook-gateway.pixeliumperfecto.workers.dev
CLOUDFLARE_ZONE_ID=auto

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_BASE_URL=https://webhook-gateway.pixeliumperfecto.workers.dev
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# GRAINCHAIN CONFIGURATION - LOCAL SANDBOXING
# =============================================================================
GRAINCHAIN_ENABLED=true
GRAINCHAIN_SANDBOX_DIR=/tmp/grainchain-sandbox
GRAINCHAIN_MAX_CONTAINERS=5
GRAINCHAIN_TIMEOUT_MINUTES=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_FLAG_USE_OFFICIAL_API=true
FEATURE_FLAG_ENABLE_WEBHOOKS=true
FEATURE_FLAG_ENHANCED_VALIDATION=true
FEATURE_FLAG_GRAINCHAIN_SANDBOXING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEVELOPMENT_MODE=true
DEMO_MODE=false
ENABLE_DEBUG_LOGGING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:8000
# Note: CORS origins are configured in settings.py with default values. 
# Uncomment and modify above line if you need custom CORS origins.
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# VALIDATION PIPELINE
# =============================================================================
VALIDATION_TIMEOUT_MINUTES=30
MAX_VALIDATION_RETRIES=3
AUTO_MERGE_ENABLED=true
MAX_CONCURRENT_VALIDATIONS=5
AUTO_CLEANUP_HOURS=24

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
